{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "target": "es2022",
    "types": ["node", "reflect-metadata"],
    "lib": ["es2022"],
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "newLine": "lf"
  },
  "include": ["./src/**/*", "./index.ts"],
  "exclude": ["node_modules", "**/__tests__/*", "build"]
}